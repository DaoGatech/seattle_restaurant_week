{
    "manifest_version": 2,

    "name": "Seattle Restaurant Week",
    "description": "This extension will show you Yelp's rating for restaurants",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title":  "Click me!"
    },

    "permissions": [
        "activeTab",
        "storage"
    ],

    "content_scripts": [

        {
            "matches": [ "http://srw.seattletimes.com/*" ],
            "css": [ "core.css" ],
            "js": [ "core.js" ],
            "run_at": "document_end",
            "all_frames": true
        }
    ]
}